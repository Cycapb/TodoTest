<script type="text/javascript">
    $(document).ready(clickDate);
</script>
@model TodoWEB.Models.EditViewModel
@using (Ajax.BeginForm("Edit", new {id = Model.Id}, new AjaxOptions()
{
    Url = Url.Action("Edit", new {id = Model.Id}),
    UpdateTargetId = "todoPanel"
}, new {@class = "form-inline"}))
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(x => x.Description)
        @Html.TextBoxFor(x => x.Description, new {@class = "form-control"})
        @Html.ValidationMessageFor(x => x.Description)
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.DtEnd)
        @Html.TextBoxFor(x => x.DtEnd, new
        {
            @class = "datepicker form-control",
            id = "todo_DtEnd",
            onclick = "clickDate()",
            Value = DateTime.Today.ToShortDateString()
        })
    </div>
    <input type="submit" class="btn btn-success btn-sm pull-right" value="Сохранить" />
}