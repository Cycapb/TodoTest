@using TodoDAL.Models
@model IEnumerable<TodoDAL.Models.Todo>
<table class="table table-hover" id="todoTable">
    <tr>
        <th></th>
        <th>Описание</th>
        <th>Дата выполнения</th>
        <th>Действие</th>
    </tr>
    @foreach (var item in Model)
            {
        <tr>
            <td></td>
            <td>@item.Description</td>
            <td>@item.CompletionDate.ToShortDateString()</td>
            <td>
                @using (Ajax.BeginForm("Delete", new { id = item.TodoId }, new AjaxOptions()
                {
                    Url = Url.Action("Delete", new { id = item.TodoId }),
                    UpdateTargetId = "todoPanel"
                }))
                {
                    <input type="submit" value="Delete" class="btn btn-danger btn-xs" />
                }
            </td>
        </tr>
    }
</table>

